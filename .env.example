# ============================================
# Database Configuration
# ============================================
DB_CONNECTION_STRING=mongodb://localhost:27017/zeptac_iot
MONGODB_URI=mongodb://localhost:27017/zeptac_iot

# MongoDB Atlas connection string (optional - used in production)
# Example:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.dpt6dxy.mongodb.net/<dbname>?retryWrites=true&w=majority

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-too
REFRESH_TOKEN_EXPIRE=30d
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# ============================================
# MQTT Configuration
# ============================================
MQTT_BROKER_URL=mqtt://test.mosquitto.org
# MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT_USERNAME=your_username
# MQTT_PASSWORD=your_password

# ============================================
# Device Management
# ============================================
# Device status check interval (in minutes)
DEVICE_STATUS_CHECK_INTERVAL=2

# Device offline threshold (in minutes)
DEVICE_OFFLINE_THRESHOLD=5

# Device warning threshold (in minutes)
DEVICE_WARNING_THRESHOLD=3

# Historical data retention period (in days)
HISTORY_RETENTION_DAYS=30

# ============================================
# Email Configuration - Gmail
# ============================================
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASSWORD=your_app_specific_password

# ============================================
# Email Configuration - Outlook
# ============================================
OUTLOOK_USER=your_outlook@hotmail.com
OUTLOOK_PASSWORD=your_outlook_password

# ============================================
# Email Configuration - Generic SMTP
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@zeptac.com

# ============================================
# General Email Settings
# ============================================
EMAIL_FROM=noreply@zeptac.com
EMAIL_USER=your_default_email@company.com
EMAIL_PASSWORD=your_default_email_password

# ============================================
# Twilio Configuration (for SMS)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Socket.IO Configuration
# ============================================
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
# Options: error, warn, info, debug

# ============================================
# Feature Flags
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_DEVICE_CONTROL=true
ENABLE_DATA_EXPORT=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100